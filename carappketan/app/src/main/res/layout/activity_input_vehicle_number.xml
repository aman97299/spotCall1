<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center_vertical|center_horizontal">

    <TextView
        android:id="@+id/textViewVehicleNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Vehicle Number:"
        android:textSize="35sp"
        android:textColor="#2AD4EC"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextVehicleNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewVehicleNumber"

        android:inputType="text"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_bg" />/>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextVehicleNumber"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#2AD4EC"
        android:text="Submit"/>

</RelativeLayout>
